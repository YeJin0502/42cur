printf("-->|%.*d|<--\n", 1, d);//>-->|-135|<--
printf("-->|%.*d|<--\n", 2, d);//>-->|-135|<--
printf("-->|%.*d|<--\n", 3, d);//>-->|-135|<--
printf("-->|%.*d|<--\n", 4, d);//>-->|-0135|<--
printf("-->|%.*d|<--\n", 4, d);//>-->|0-135|<--

printf("-->|%04d|<--\n", d);//>-->|0198|<--
printf("-->|%04d|<--\n", d);//>-->| 198|<--
printf("-->|%--4.d|<--\n", d);//>-->|198 |<--
printf("-->|%--4.*d|<--\n", -4, d);//>-->|198 |<--
printf("-->|%--4.*d|<--\n", -3, d);//>-->|198 |<--