ft_printf("-->|%0.3d|<--\n", d);//>-->|-012|<--
ft_printf("-->|%0.4d|<--\n", d);//>-->|-0012|<--
ft_printf("-->|%0d|<--\n", d);//>-->|-12|<--
ft_printf("-->|%0*.d|<--\n", -4, d);//>-->|-12 |<--
ft_printf("-->|%0*.d|<--\n", -4, d);//>-->|-120|<--
ft_printf("-->|%04.0d|<--\n", d);//>-->|0198|<--
ft_printf("-->|%04.1d|<--\n", d);//>-->|0198|<--
ft_printf("-->|%04.2d|<--\n", d);//>-->| 198|<--
ft_printf("-->|%04.3d|<--\n", d);//>-->| 198|<--
ft_printf("-->|%04.4d|<--\n", d);//>-->|0198|<--