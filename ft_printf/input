ft_printf("-->|%-3p|<--\n", p);//>-->|0x0|<--
ft_printf("-->|%-2.p|<--\n", p);//>-->|0x|<--
ft_printf("-->|%-2p|<--\n", p);//>-->|0x0|<--
ft_printf("-->|%-1.p|<--\n", p);//>-->|0x|<--
ft_printf("-->|%-1.p|<--\n", p);//>-->|0|<--
ft_printf("-->|%*.p|<--\n", 11, p);//>-->|          0|<--
ft_printf("-->|%*.p|<--\n", 12, p);//>-->|           0|<--
ft_printf("-->|%*.p|<--\n", 13, p);//>-->|            0|<--
ft_printf("-->|%*.p|<--\n", 14, p);//>-->|             0|<--
ft_printf("-->|%*.p|<--\n", 15, p);//>-->|              0|<--