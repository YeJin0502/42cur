printf("-->|%-4.d|<--\n", d);//>-->|-135|<--
printf("-->|%-4.*d|<--\n", -4, d);//>-->|-135|<--
printf("-->|%-4.*d|<--\n", -3, d);//>-->|-135|<--
printf("-->|%-4.*d|<--\n", -2, d);//>-->|-135|<--
printf("-->|%-4.*d|<--\n", -1, d);//>-->|-135|<--

printf("-->|%-4.1d|<--\n", d);//>-->||<--
printf("-->|%-4.2d|<--\n", d);//>-->||<--
printf("-->|%-4.3d|<--\n", d);//>-->||<--
printf("-->|%-4.4d|<--\n", d);//>-->||<--
printf("-->|%-4d|<--\n", d);//>-->||<--