ft_printf("-->|%-1.3d|<--\n", d);//>-->|-135|<--
ft_printf("-->|%-1.4d|<--\n", d);//>-->|-0135|<--
ft_printf("-->|%-1d|<--\n", d);//>-->|-135|<--
ft_printf("-->|%.d|<--\n", d);//>-->|-135|<--
ft_printf("-->|%.*d|<--\n", -4, d);//>-->|-135|<--
ft_printf("-->|%04.2d|<--\n", d);//>-->|0198|<--
ft_printf("-->|%04.3d|<--\n", d);//>-->|0198|<--
ft_printf("-->|%04.4d|<--\n", d);//>-->|0198|<--
ft_printf("-->|%04d|<--\n", d);//>-->|0198|<--
ft_printf("-->|%--4.d|<--\n", d);//>-->|198 |<--