ft_printf("-->|%*.d|<--\n", -3, d);//>-->|   |<--
ft_printf("-->|%*.d|<--\n", -2, d);//>-->|  |<--
ft_printf("-->|%*.d|<--\n", -1, d);//>-->| |<--
ft_printf("-->|%*.d|<--\n", 0, d);//>-->||<--
ft_printf("-->|%*.d|<--\n", 0, d);//>-->| |<--
ft_printf("-->|%-*.0d|<--\n", 0, d);//>-->||<--
ft_printf("-->|%-*.0d|<--\n", 0, d);//>-->| |<--
ft_printf("-->|%-*.0d|<--\n", 1, d);//>-->| |<--
ft_printf("-->|%-*.0d|<--\n", 2, d);//>-->|  |<--
ft_printf("-->|%-*.0d|<--\n", 3, d);//>-->|   |<--